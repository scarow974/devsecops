import hashlib, os

def hash_password(password, salt=None):
    if not salt:
        salt = os.urandom(16)
    hashed = hashlib.sha256(salt + password.encode()).hexdigest()
    return hashed, salt

def verify_password(stored_hash, salt, password_attempt):
    attempt_hash = hashlib.sha256(salt + password_attempt.encode()).hexdigest()
    return attempt_hash == stored_hash

# Exemple
pwd = "monMotDePasse"
hashed, salt = hash_password(pwd)
print("VÃ©rification:", verify_password(hashed, salt, "monMotDePasse"))
