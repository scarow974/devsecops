import csv

FILENAME = "produits.csv"

def ajouter_produit(id, nom, description, prix, quantite):
    with open(FILENAME, mode="a", newline="", encoding="utf-8") as f:
        writer = csv.writer(f)
        writer.writerow([id, nom, description, prix, quantite])

def lire_produits():
    try:
        with open(FILENAME, mode="r", newline="", encoding="utf-8") as f:
            reader = csv.reader(f)
            return list(reader)
    except FileNotFoundError:
        return []

def supprimer_produit(id):
    produits = lire_produits()
    produits = [p for p in produits if p[0] != id]
    with open(FILENAME, mode="w", newline="", encoding="utf-8") as f:
        writer = csv.writer(f)
        writer.writerows(produits)

# Exemple
ajouter_produit("1", "Clavier", "Clavier m√©canique", "79.99", "10")
print(lire_produits())
